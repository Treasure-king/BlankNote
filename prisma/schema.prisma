generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String?        @unique
  image          String?
  boards         Board[]        @relation("UserBoards")
  collaborations Collaborator[] @relation("UserCollaborations")
  createdAt      DateTime       @default(now())
}

model Board {
  id            String          @id @default(cuid())
  title         String
  description   String?
  category      String?
  priority      String?
  status        String?         @default("active")
  tags          String[]
  dueDate       DateTime?
  color         String?
  icon          String?
  coverImage    String?
  slug          String?         @unique
  isPublic      Boolean         @default(false)
  publicId      String?         @unique
  ownerId       String
  owner         User            @relation("UserBoards", fields: [ownerId], references: [id])
  collaborators Collaborator[]  @relation("BoardCollaborators")
  documentation Json?
  elements      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}



model Collaborator {
  id        String   @id @default(cuid())
  boardId   String
  userId    String
  role      Role     @default(VIEWER)
  board     Board    @relation("BoardCollaborators", fields: [boardId], references: [id])
  user      User     @relation("UserCollaborations", fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  OWNER
  EDITOR
  VIEWER
}
